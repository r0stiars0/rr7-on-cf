generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  runtime  = "cloudflare"
}

datasource db {
  provider = "postgresql"
}

model member {
  id String @id @default(uuid())
  name String
  email String @unique
  address String?
  phone String?
  last_update DateTime

}